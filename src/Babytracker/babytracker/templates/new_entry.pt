                    <input type="time" id="mixed_feed.${baby.__name__}.end_time" name="${baby.__name__}.end_time" class="time mini" pattern="[0-9]{1,2}:[0-9]{1,2}" value="${data.get('%s.end_time' % baby.__name__, '')}" />
                  </div>
